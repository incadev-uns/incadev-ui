---
import Layout from "../../layouts/MarketingLayout.astro";
---

<Layout title="Campa√±as - INCADEV UI">
    <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1
                    class="text-3xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    Campa√±as de Marketing
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Gestiona todas tus campa√±as de propuestas y cursos
                </p>
            </div>
        </div>

        <!-- Stats Grid - 6 filtros -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-blue-500 dark:border-blue-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="todas"
            >
                <div class="text-center">
                    <p
                        id="stat-todas"
                        class="text-2xl font-bold text-gray-900 dark:text-white"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Todas
                    </p>
                </div>
            </button>

            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 hover:border-purple-500 dark:hover:border-purple-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="propuesta"
            >
                <div class="text-center">
                    <p
                        id="stat-propuestas"
                        class="text-2xl font-bold text-purple-600 dark:text-purple-400"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Propuestas
                    </p>
                </div>
            </button>

            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 hover:border-emerald-500 dark:hover:border-emerald-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="curso"
            >
                <div class="text-center">
                    <p
                        id="stat-cursos"
                        class="text-2xl font-bold text-emerald-600 dark:text-emerald-400"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Cursos
                    </p>
                </div>
            </button>

            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 hover:border-blue-500 dark:hover:border-blue-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="proxima"
            >
                <div class="text-center">
                    <p
                        id="stat-proximas"
                        class="text-2xl font-bold text-blue-600 dark:text-blue-400"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Pr√≥ximas
                    </p>
                </div>
            </button>

            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 hover:border-green-500 dark:hover:border-green-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="activa"
            >
                <div class="text-center">
                    <p
                        id="stat-activas"
                        class="text-2xl font-bold text-green-600 dark:text-green-400"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Activas
                    </p>
                </div>
            </button>

            <button
                class="filter-btn p-4 bg-white dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-500 dark:hover:border-gray-500 rounded-lg smooth-transition hover:shadow-md"
                data-filter="finalizada"
            >
                <div class="text-center">
                    <p
                        id="stat-finalizadas"
                        class="text-2xl font-bold text-gray-600 dark:text-gray-400"
                    >
                        0
                    </p>
                    <p
                        class="text-xs text-gray-600 dark:text-gray-400 mt-1 font-medium"
                    >
                        Finalizadas
                    </p>
                </div>
            </button>
        </div>

        <!-- Search and Filter Bar -->
        <div class="flex flex-col lg:flex-row gap-4">
            <div class="flex-1">
                <div class="relative">
                    <svg
                        class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                        ></path>
                    </svg>
                    <input
                        id="searchInput"
                        type="text"
                        placeholder="Buscar campa√±as por nombre..."
                        class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-950 border border-gray-300 dark:border-gray-800 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400"
                    />
                </div>
            </div>

            <button
                id="btnLimpiarFiltros"
                class="px-6 py-3 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-900 smooth-transition font-medium"
            >
                Limpiar
            </button>
        </div>

        <!-- Campa√±as List -->
        <div
            id="campa√±asList"
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
        >
            <!-- Las campa√±as se cargar√°n aqu√≠ din√°micamente -->
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
            <div
                class="w-20 h-20 bg-gray-100 dark:bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4"
            >
                <svg
                    class="w-10 h-10 text-gray-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                    ></path>
                </svg>
            </div>
            <h3
                class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
            >
                No se encontraron campa√±as
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
                Intenta ajustar los filtros o crea nuevas campa√±as desde
                propuestas o cursos
            </p>
        </div>
    </div>

    <script>
        import {
            fetchAllCampaigns,
            deleteCampaign,
            type CampaignForUI,
        } from "../../services/marketing";

        // ============================================
        // CONFIGURACI√ìN DE ESTADOS Y TIPOS
        // ============================================
        const estadoConfig = {
            proxima: {
                label: "Pr√≥xima",
                bg: "bg-blue-50 dark:bg-blue-950/30",
                text: "text-blue-700 dark:text-blue-400",
                border: "border-blue-200 dark:border-blue-900/50",
                icon: "üîµ",
                gradient: "from-blue-500 to-cyan-500",
            },
            activa: {
                label: "Activa",
                bg: "bg-green-50 dark:bg-green-950/30",
                text: "text-green-700 dark:text-green-400",
                border: "border-green-200 dark:border-green-900/50",
                icon: "üü¢",
                gradient: "from-green-500 to-emerald-500",
            },
            finalizada: {
                label: "Finalizada",
                bg: "bg-gray-100 dark:bg-gray-800",
                text: "text-gray-700 dark:text-gray-400",
                border: "border-gray-300 dark:border-gray-700",
                icon: "‚ö™",
                gradient: "from-gray-500 to-gray-600",
            },
        };

        const tipoConfig = {
            propuesta: {
                label: "Propuesta",
                icon: "üìù",
                color: "text-purple-600 dark:text-purple-400",
                bg: "bg-purple-50 dark:bg-purple-950/30",
            },
            curso: {
                label: "Curso",
                icon: "üìö",
                color: "text-emerald-600 dark:text-emerald-400",
                bg: "bg-emerald-50 dark:bg-emerald-950/30",
            },
        };

        let campa√±as: CampaignForUI[] = [];

        // ============================================
        // ACTUALIZAR ESTAD√çSTICAS
        // ============================================
        function updateStats() {
            const total = campa√±as.length;
            const porTipo = campa√±as.reduce(
                (acc: Record<string, number>, c) => {
                    acc[c.tipo] = (acc[c.tipo] || 0) + 1;
                    return acc;
                },
                {},
            );
            const porEstado = campa√±as.reduce(
                (acc: Record<string, number>, c) => {
                    acc[c.estado] = (acc[c.estado] || 0) + 1;
                    return acc;
                },
                {},
            );

            document.getElementById("stat-todas")!.textContent = String(total);
            document.getElementById("stat-propuestas")!.textContent = String(
                porTipo.propuesta || 0,
            );
            document.getElementById("stat-cursos")!.textContent = String(
                porTipo.curso || 0,
            );
            document.getElementById("stat-proximas")!.textContent = String(
                porEstado.proxima || 0,
            );
            document.getElementById("stat-activas")!.textContent = String(
                porEstado.activa || 0,
            );
            document.getElementById("stat-finalizadas")!.textContent = String(
                porEstado.finalizada || 0,
            );
        }

        // ============================================
        // RENDERIZAR CAMPA√ëAS
        // ============================================
        interface Filtros {
            filtro?: string;
            busqueda?: string;
        }

        function renderCampa√±as(filtros: Filtros = {}) {
            const container = document.getElementById("campa√±asList");
            const emptyState = document.getElementById("emptyState");
            if (!container) return;

            let filtered = campa√±as;

            // Filtro principal
            if (filtros.filtro && filtros.filtro !== "todas") {
                if (
                    filtros.filtro === "propuesta" ||
                    filtros.filtro === "curso"
                ) {
                    filtered = filtered.filter(
                        (c) => c.tipo === filtros.filtro,
                    );
                } else {
                    filtered = filtered.filter(
                        (c) => c.estado === filtros.filtro,
                    );
                }
            }

            // Filtro por b√∫squeda
            if (filtros.busqueda) {
                filtered = filtered.filter((c) =>
                    c.nombre
                        .toLowerCase()
                        .includes(filtros.busqueda!.toLowerCase()),
                );
            }

            if (filtered.length === 0) {
                container.classList.add("hidden");
                emptyState?.classList.remove("hidden");
                return;
            }

            container.classList.remove("hidden");
            emptyState?.classList.add("hidden");

            container.innerHTML = filtered
                .map((c) => {
                    const estado = estadoConfig[c.estado];
                    const tipo = tipoConfig[c.tipo];
                    const fechaInicio = new Date(c.inicio).toLocaleDateString(
                        "es-ES",
                        {
                            day: "2-digit",
                            month: "short",
                        },
                    );
                    const fechaFin = new Date(c.fin).toLocaleDateString(
                        "es-ES",
                        {
                            day: "2-digit",
                            month: "short",
                        },
                    );

                    return `
          <div class="group relative bg-white dark:bg-gray-950 border border-gray-200 dark:border-gray-800 rounded-xl overflow-hidden hover:shadow-2xl smooth-transition">
            <!-- Gradient Top Bar -->
            <div class="h-2 bg-gradient-to-r ${estado.gradient}"></div>
            
            <div class="p-6">
              <!-- Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="px-2 py-1 ${tipo.bg} ${tipo.color} rounded-full text-xs font-medium">
                      ${tipo.icon} ${tipo.label}
                    </span>
                    <span class="px-2 py-1 ${estado.bg} ${estado.text} border ${estado.border} rounded-full text-xs font-medium">
                      ${estado.icon} ${estado.label}
                    </span>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 smooth-transition">
                    ${c.nombre}
                  </h3>
                </div>
              </div>

              <!-- Objetivo -->
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                ${c.objetivo}
              </p>

              <!-- Origen -->
              <div class="p-3 bg-gray-50 dark:bg-gray-900 rounded-lg mb-4">
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">
                  ${c.tipo === "propuesta" ? "Propuesta" : "Curso"}
                </p>
                <p class="text-sm font-semibold text-gray-900 dark:text-white truncate">
                  ${c.tipo === "propuesta" ? c.propuestaTitulo || "Sin t√≠tulo" : c.nombre || "Sin nombre"}
                </p>
              </div>

              <!-- Fechas -->
              <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>${fechaInicio} - ${fechaFin}</span>
              </div>

              <!-- Acciones -->
              <div class="flex gap-2 pt-3 border-t border-gray-200 dark:border-gray-800">
                
                <a href="/marketing/campaigns/${c.id}"
                  class="flex-1 px-3 py-2 text-center text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-950/30 rounded-lg smooth-transition text-sm font-medium"
                >
                  Ver Detalles
                </a>
                <button
                  onclick="event.stopPropagation(); editarCampa√±a(${c.id})"
                  class="flex-1 px-3 py-2 text-center text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-900 rounded-lg smooth-transition text-sm font-medium"
                >
                  Editar
                </button>
                <button
                  onclick="event.stopPropagation(); eliminarCampa√±a(${c.id})"
                  class="px-3 py-2 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-950/30 rounded-lg smooth-transition text-sm font-medium"
                >
                  üóëÔ∏è
                </button>
              </div>
            </div>
          </div>
        `;
                })
                .join("");
        }

        // ============================================
        // FUNCIONES GLOBALES
        // ============================================
        (window as any).editarCampa√±a = function (id: number) {
            alert(`Editar campa√±a ${id} - Funcionalidad pendiente`);
        };

        (window as any).eliminarCampa√±a = async function (id: number) {
            if (!confirm("¬øEst√°s seguro de eliminar esta campa√±a?")) return;

            try {
                await deleteCampaign(id);
                campa√±as = campa√±as.filter((c) => c.id !== id);
                updateStats();
                renderCampa√±as();
                alert("‚úÖ Campa√±a eliminada correctamente");
            } catch (error) {
                console.error("Error eliminando campa√±a:", error);
                alert("‚ùå Error al eliminar la campa√±a");
            }
        };

        // ============================================
        // CARGAR DATOS Y EVENT LISTENERS
        // ============================================
        document.addEventListener("DOMContentLoaded", async () => {
            console.log("[Campa√±as] Loading campaigns from API...");

            const container = document.getElementById("campa√±asList");
            if (container) {
                container.innerHTML = `
          <div class="col-span-full flex items-center justify-center py-12">
            <div class="text-center">
              <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
              <p class="text-gray-600 dark:text-gray-400">Cargando campa√±as...</p>
            </div>
          </div>
        `;
            }

            try {
                campa√±as = await fetchAllCampaigns();
                console.log("[Campa√±as] Campaigns loaded:", campa√±as.length);
                updateStats();
                renderCampa√±as();
            } catch (error) {
                console.error("[Campa√±as] Error loading campaigns:", error);
                if (container) {
                    container.innerHTML = `
            <div class="col-span-full text-center py-12">
              <div class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                Error al cargar campa√±as
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                ${error instanceof Error ? error.message : "No se pudieron cargar los datos"}
              </p>
              <button onclick="window.location.reload()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                Reintentar
              </button>
            </div>
          `;
                }
                return;
            }

            let filtrosActuales: Filtros = { filtro: "todas" };

            // Filtros
            document.querySelectorAll(".filter-btn").forEach((btn) => {
                btn.addEventListener("click", () => {
                    document.querySelectorAll(".filter-btn").forEach((b) => {
                        b.classList.remove(
                            "border-blue-500",
                            "dark:border-blue-500",
                        );
                        b.classList.add(
                            "border-gray-200",
                            "dark:border-gray-800",
                        );
                    });
                    btn.classList.remove(
                        "border-gray-200",
                        "dark:border-gray-800",
                    );
                    btn.classList.add(
                        "border-blue-500",
                        "dark:border-blue-500",
                    );

                    filtrosActuales.filtro =
                        btn.getAttribute("data-filter") || "todas";
                    renderCampa√±as(filtrosActuales);
                });
            });

            // B√∫squeda
            const searchInput = document.getElementById("searchInput");
            searchInput?.addEventListener("input", (e) => {
                filtrosActuales.busqueda = (e.target as HTMLInputElement).value;
                renderCampa√±as(filtrosActuales);
            });

            // Limpiar filtros
            const btnLimpiarFiltros =
                document.getElementById("btnLimpiarFiltros");
            btnLimpiarFiltros?.addEventListener("click", () => {
                filtrosActuales = { filtro: "todas" };
                if (searchInput) (searchInput as HTMLInputElement).value = "";

                document.querySelectorAll(".filter-btn").forEach((b) => {
                    b.classList.remove(
                        "border-blue-500",
                        "dark:border-blue-500",
                    );
                    b.classList.add("border-gray-200", "dark:border-gray-800");
                });
                document
                    .querySelector('[data-filter="todas"]')
                    ?.classList.add("border-blue-500", "dark:border-blue-500");
                document
                    .querySelector('[data-filter="todas"]')
                    ?.classList.remove(
                        "border-gray-200",
                        "dark:border-gray-800",
                    );

                renderCampa√±as(filtrosActuales);
            });
        });
    </script>
</Layout>
