    // ============================================
    // RENDERIZAR ALUMNO
    // ============================================
    function renderAlumno(alumno: AlumnoDetalleForUI) {
      console.log("[renderAlumno] Datos recibidos:", alumno);

      if (!alumno) {
        console.error("[renderAlumno] Alumno data is null or undefined");
        mostrarError("No se recibieron datos del alumno");
        return;
      }

      // Obtener valores desde la estructura del backend
      const alumnoInfo = alumno.alumno;

      // Breadcrumb
      const breadcrumb = document.getElementById("breadcrumbTitle");
      if (breadcrumb) breadcrumb.textContent = alumnoInfo.nombre;

      const nombreAlumno = alumnoInfo.nombre;
      const emailAlumno = alumnoInfo.email;
      const telefonoAlumno = alumnoInfo.telefono || "No registrado";
      const dniAlumno = alumnoInfo.dni || null;
      const estadoAlumno = alumnoInfo.estado;
      const cursoAlumno = alumnoInfo.curso;
      const grupoAlumno = alumnoInfo.grupo;
      const fechaRegistroAlumno = alumnoInfo.fechaRegistro;
      const interesesAlumno = alumnoInfo.interests || [];
      const learningGoalAlumno = alumnoInfo.learningGoal || null;

      // Avatar
      const avatarContainer = document.getElementById("alumnoAvatar");
      if (avatarContainer) {
        if (alumnoInfo.avatar) {
          avatarContainer.innerHTML = `
            <img src="${alumnoInfo.avatar}" alt="${nombreAlumno}" class="w-24 h-24 rounded-full object-cover border-4 border-blue-200 dark:border-blue-900" />
