---
import "@/styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Dashboard | INCADEV Tecnológico",
  description = "Panel de control del módulo tecnológico"
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="viewport-fit=cover, width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
    />
    <meta name="robots" content="noindex, nofollow" />
    <meta http-equiv="Content-Language" content="es" />
    <meta name="author" content="INCADEV" />
    <meta name="copyright" content="© 2025 INCADEV" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#FFFFFF" />

    <link rel="icon" type="image/x-icon" href="favicon.ico" />

    <!-- Theme Script - Must run before body renders -->
    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };
      const isDark = getThemePreference() === 'dark';
      document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
    </script>
  </head>
  <body class="min-h-screen bg-background">
    <slot />
    <script>
      import { GlobalIdleDetector } from '@/components/security/GlobalIdleDetector';
      import { createRoot } from 'react-dom/client';
      import React from 'react';

      // Montar el detector de inactividad global
      const idleDetectorContainer = document.createElement('div');
      idleDetectorContainer.id = 'global-idle-detector';
      document.body.appendChild(idleDetectorContainer);

      const root = createRoot(idleDetectorContainer);
      root.render(React.createElement(GlobalIdleDetector, { enabled: true }));
    </script>
  </body>
</html>

<style>
  html,
  body {
    padding: 0px;
    margin: 0px;
    width: 100%;
    height: 100%;
  }
</style>

<script is:inline>
  // Observer para mantener sincronizado el tema en localStorage
  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
  }
</script>
