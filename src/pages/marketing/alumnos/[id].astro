export async function getStaticPaths() {
  try {
    // Fetch all alumnos at build time
    const url = `${config.apiUrl}${config.endpoints.alumnos.stats}`;
    console.log("[Build] Fetching alumnos from:", url);

    const response = await fetch(url);

    if (!response.ok) {
      throw new Error(`Failed to fetch alumnos: ${response.statusText}`);
    }

    const data = await response.json();
    const alumnos = data.alumnos || [];

    console.log(`[Build] Generating ${alumnos.length} alumno pages`);

    // Generate a path for each alumno
    return alumnos.map((alumno: any) => ({
      params: { id: alumno.id.toString() },
      props: {
        alumnoId: alumno.id,
        alumnoNombre: alumno.nombre,
      },
    }));
  } catch (error) {
    console.error("[Build] Error in getStaticPaths:", error);
    return [];
  }
}

