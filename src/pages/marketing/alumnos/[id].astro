      }

      // Curso principal
      const cursoPrincipal = document.getElementById("cursoPrincipal");
      if (cursoPrincipal) cursoPrincipal.textContent = `${cursoAlumno} - ${grupoAlumno}`;

      // Fecha de registro
      const fechaRegistro = document.getElementById("fechaRegistro");
      if (fechaRegistro && fechaRegistroAlumno) {
        const fecha = new Date(fechaRegistroAlumno);
        fechaRegistro.textContent = fecha.toLocaleDateString("es-ES", {
          day: "numeric",
          month: "long",
          year: "numeric",
        });
      }

      // Intereses
      const interesesContainer = document.getElementById("interesesContainer");
      if (interesesContainer && interesesAlumno && interesesAlumno.length > 0) {
        interesesContainer.innerHTML = interesesAlumno
          .map(
            (i: string) =>
              `<span class="px-3 py-1 bg-blue-50 dark:bg-blue-950/30 text-blue-600 dark:text-blue-400 rounded-full text-sm">${i}</span>`,
          )
          .join("");
      } else if (interesesContainer) {
        interesesContainer.innerHTML =
          '<span class="text-gray-500 dark:text-gray-400">Sin intereses registrados</span>';
      }

      // Asistencia (desde asistencias.resumen)
      if (alumno.asistencias && alumno.asistencias.resumen) {
        const resumenAsist = alumno.asistencias.resumen;
        const asistenciaPorcentaje = document.getElementById("asistenciaPorcentaje");
        const asistenciaDetalle = document.getElementById("asistenciaDetalle");
        if (asistenciaPorcentaje)
          asistenciaPorcentaje.textContent = `${(resumenAsist.porcentaje || 0).toFixed(1)}%`;
        if (asistenciaDetalle)
          asistenciaDetalle.textContent = `${resumenAsist.presentes || 0} / ${resumenAsist.totalClases || 0} clases`;
      }

      // Rendimiento (desde rendimiento.resumen)
      if (alumno.rendimiento && alumno.rendimiento.resumen) {
        const resumenRend = alumno.rendimiento.resumen;
        const promedioNotas = document.getElementById("promedioNotas");
        const tareasDetalle = document.getElementById("tareasDetalle");
        if (promedioNotas)
          promedioNotas.textContent = (resumenRend.promedioNotas || 0).toFixed(1);
        if (tareasDetalle)
          tareasDetalle.textContent = `${resumenRend.tareasEntregadas || 0} / ${resumenRend.tareasTotales || 0} tareas entregadas`;
      }

      // Engagement Score: usar solo el valor del backend (0-10) y mostrarlo en 0-100
      const backendEngagement = alumnoInfo.engagementScore ?? 0;
      // Ya viene escalado a 0-100 desde el mapper; no volver a multiplicar
      let engagementScore = backendEngagement || 0;

      const engagementScoreEl = document.getElementById("engagementScore");
      const engagementBar = document.getElementById("engagementBar");

      engagementScore = engagementScore ?? 0;

      if (engagementScoreEl)
        engagementScoreEl.textContent = `${Math.round(engagementScore)}/100`;
      if (engagementBar) {
        engagementBar.style.width = `${engagementScore}%`;
        engagementBar.className = `h-2 rounded-full ${
          engagementScore >= 80
            ? "bg-green-600"
            : engagementScore >= 60
              ? "bg-yellow-600"
              : "bg-red-600"
        }`;
      }

      // Timeline - Historial de actividad
      if (alumno.timeline && alumno.timeline.length > 0) {
        const historialContainer = document.getElementById("historialContainer");
        if (historialContainer) {
          const tipoIcons: any = {
            matricula: {
              icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
              color: "text-green-600 dark:text-green-400",
              bg: "bg-green-100 dark:bg-green-900/30",
            },
            primera_clase: {
              icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
              color: "text-blue-600 dark:text-blue-400",
              bg: "bg-blue-100 dark:bg-blue-900/30",
            },
            registro: {
              icon: "M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z",
              color: "text-purple-600 dark:text-purple-400",
              bg: "bg-purple-100 dark:bg-purple-900/30",
            },
            default: {
              icon: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
              color: "text-gray-600 dark:text-gray-400",
              bg: "bg-gray-100 dark:bg-gray-900/30",
            },
          };

          historialContainer.innerHTML = alumno.timeline
            .map((evento) => {
              const config = tipoIcons[evento.tipo] || tipoIcons.default;
              const fecha = new Date(evento.timestamp);
              const fechaFormateada = fecha.toLocaleDateString("es-ES", {
                day: "numeric",
                month: "short",
                year: "numeric",
              });
              const horaFormateada = fecha.toLocaleTimeString("es-ES", {
                hour: "2-digit",
                minute: "2-digit",
              });

              return `
              <div class="flex gap-4 p-4 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800 hover:shadow-md smooth-transition">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 ${config.bg} rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 ${config.color}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${config.icon}" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <div class="flex items-start justify-between mb-2">
                    <h4 class="font-semibold text-gray-900 dark:text-white">${evento.descripcion}</h4>
                    <span class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap ml-4">${fechaFormateada} ${horaFormateada}</span>
                  </div>
                  ${
                    evento.fecha
                      ? `<p class="text-sm text-gray-600 dark:text-gray-400">üìÖ ${new Date(evento.fecha).toLocaleDateString("es-ES", { day: "numeric", month: "long", year: "numeric" })}</p>`
                      : ""
                  }
                </div>
              </div>
            `;
            })
            .join("");
        }
      }
    }

    // ============================================
    // INICIALIZACI√ìN
    // ============================================
    document.addEventListener("DOMContentLoaded", async () => {
      console.log("[Alumno Detail] Loading alumno:", alumnoId);

      try {
        alumnoData = await fetchAlumnoDetalle(alumnoId);
        console.log("[Alumno Detail] Alumno loaded:", alumnoData);

        if (!alumnoData) {
          throw new Error("No se pudieron cargar los datos del alumno");
        }

        renderAlumno(alumnoData);
        mostrarContenido();
      } catch (error) {
        console.error("[Alumno Detail] Error loading alumno:", error);
        mostrarError(
          error instanceof Error ? error.message : "Error desconocido",
        );
      }

      // ============================================
      // TABS
      // ============================================
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const tab = btn.getAttribute("data-tab");

          document.querySelectorAll(".tab-btn").forEach((b) => {
            b.classList.remove(
              "bg-blue-50",
              "dark:bg-blue-950/30",
              "text-blue-600",
              "dark:text-blue-400",
            );
            b.classList.add("text-gray-600", "dark:text-gray-400");
          });
          btn.classList.add(
            "bg-blue-50",
            "dark:bg-blue-950/30",
            "text-blue-600",
            "dark:text-blue-400",
          );
          btn.classList.remove("text-gray-600", "dark:text-gray-400");

          document.querySelectorAll(".tab-content").forEach((content) => {
            content.classList.add("hidden");
          });
          document.getElementById(`tab-${tab}`)?.classList.remove("hidden");
        });
      });
    });
  </script>
</Layout>
