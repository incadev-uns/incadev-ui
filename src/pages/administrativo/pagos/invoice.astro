---
import PaymentInvoice from '@/process/administrative/pays/PaymentInvoice.tsx';
import '@/styles/global.css';
const paymentId = Astro.url.searchParams.get('id') || '';
const stream = Astro.url.searchParams.get('stream') === 'true';
const title = `Factura ${paymentId ? `#${paymentId}` : ''}`;
const description = 'Comprobante de pago del estudiante';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <style>
    @media print {
      @page {
        margin: 1.5cm 2cm;
      }
    }
  </style>
</head>
<body>
  <PaymentInvoice paymentId={paymentId} stream={stream} client:load />
</body>
</html>