---
// src/pages/marketing/cursos/[id].astro
import Layout from "../../../layouts/MarketingLayout.astro";
import { config } from "../../../config/marketing-config";

// ============================================
// getStaticPaths - Pre-genera páginas estáticas
// =========================================
export async function getStaticPaths() {
  try {
    // Fetch all versions at build time
    const url = `${config.apiUrl}${config.endpoints.versions.list}`;
    console.log("[Build] Fetching versions from:", url);

    const response = await fetch(url);

    if (!response.ok) {
      throw new Error(`Failed to fetch versions: ${response.statusText}`);
    }

    const data = await response.json();
    const versions = data.data || [];

    console.log(`[Build] Generating ${versions.length} version pages`);

    // Generate a path for each version
    return versions.map((version: any) => ({
      params: { id: version.id.toString() },
      props: {
        versionId: version.id,
        versionName: version.name,
      },
    }));
  } catch (error) {
    console.error("[Build] Error in getStaticPaths:", error);
    return [];
  }
}

const { versionId, versionName } = Astro.props;
const mockTitle = `${versionName} - INCADEV UI`;
---

<Layout title={mockTitle}>
  <div class="space-y-6" data-version-id={versionId}>
    <!-- Breadcrumb -->
    <nav
      class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400"
    >
      <a
        href="/marketing/dashboard"
        class="hover:text-blue-600 dark:hover:text-blue-400 smooth-transition"
        >Dashboard</a
      >
      <span>/</span>
      <a
        href="/marketing/cursos"
        class="hover:text-blue-600 dark:hover:text-blue-400 smooth-transition"
        >Cursos</a
      >
      <span>/</span>
      <span id="breadcrumbTitle" class="text-gray-900 dark:text-white"
        >Cargando...</span
      >
    </nav>

    <!-- Loading State -->
    <div
      id="loadingState"
      class="bg-white dark:bg-gray-950 rounded-xl border border-gray-200 dark:border-gray-800 p-12 text-center"
    >
      <div
        class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"
      >
      </div>
      <p class="text-gray-600 dark:text-gray-400">
        Cargando versión del curso...
      </p>
    </div>

    <!-- Error State -->
    <div
      id="errorState"
      class="hidden bg-white dark:bg-gray-950 rounded-xl border border-gray-200 dark:border-gray-800 p-12 text-center"
    >
      <div
        class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
      >
        <svg
          class="w-10 h-10 text-red-600 dark:text-red-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
        Error al cargar la versión
      </h3>
      <p id="errorMessage" class="text-gray-600 dark:text-gray-400 mb-4"></p>
      <button
        onclick="window.location.reload()"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
      >
        Reintentar
      </button>
    </div>

    <!-- Main Content -->
    <div id="mainContent" class="hidden space-y-6">
      <!-- Header de la Versión -->
      <div
        class="bg-white dark:bg-gray-950 rounded-xl border border-gray-200 dark:border-gray-800 p-6"
      >
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-3 flex-wrap">
              <h1
                id="versionNombre"
                class="text-3xl font-bold text-gray-900 dark:text-white"
              >
              </h1>
              <span
                id="versionBadge"
                class="px-3 py-1 bg-blue-50 dark:bg-blue-950/30 text-blue-700 dark:text-blue-400 border border-blue-200 dark:border-blue-900/50 rounded-full text-sm font-medium"
              >
                Versión
              </span>
            </div>

            <p
              id="cursoNombre"
              class="text-xl text-gray-700 dark:text-gray-300 mb-2"
            >
            </p>

            <p
              id="cursoDescripcion"
              class="text-gray-600 dark:text-gray-400 mb-4"
            >
            </p>

            <!-- Info de la versión -->
            <div id="versionInfo" class="flex flex-wrap gap-4 text-sm"></div>
          </div>

          <div class="flex gap-2">
            <a
