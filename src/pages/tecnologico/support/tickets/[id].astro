---
import TicketDetailPage from '@/process/technology/dashboard/TicketDetailPage';
import '@/styles/global.css';

const { id } = Astro.params;
const ticketId = parseInt(id || '0', 10);

const title = `Ticket #${id} - Tecnológico`;
const description = `Detalle del ticket #${id} de soporte técnico`;
const robots = ["noindex", "nofollow"];
---

<!DOCTYPE html>
<html lang="es" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content={robots.join(", ")} />
</head>
<body>
  <TicketDetailPage client:load ticketId={ticketId} />
</body>
</html>
