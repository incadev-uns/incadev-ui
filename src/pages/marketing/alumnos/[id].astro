        } else {
          const initials = getInitials(nombreAlumno);
          avatarContainer.innerHTML = `
            <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white font-bold text-3xl border-4 border-blue-200 dark:border-blue-900">
